@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>

<div class="text-center">
    <h1 class="display-4">We did it.</h1>
</div>

<div class="card-columns">
    @foreach (Book b in Model)
    {
        <div class="card bg-info">
            <div class="card-body">
                <h3 class="text-white">@b.Title</h3>
                <div class="text-white">@b.ISBN</div>
                <div class="text-white">$@b.Price</div>
            </div>
        </div>
    }
</div>   