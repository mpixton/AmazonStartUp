@model IEnumerable<string>

<a class="btn btn-block btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-page="">
    Home
</a>

@foreach (string category in Model)
{
    <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
       asp-controller="Home" 
       asp-action="Index" 
       asp-route-category="@category"
       asp-route-pageNum="">
        @category
    </a>
}