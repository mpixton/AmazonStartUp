@page
@model AmazonStartUp.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>SubTotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Cart.CartLine line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Book.Title</td>
                <td>@line.Book.GetDisplayName()</td>
                <td>@line.Quantity</td>
                <td>@(line.Book.Price.ToString("c"))</td>
                <td>@((line.Book.Price * line.Quantity).ToString("c"))</td>
                <td>
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" value="@line.Book.BookId" name="BookId"/>
                        <input type="hidden" value="@Model.ReturnUrl" name="returnUrl"/>
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Total:</td>
            <td>@(Model.Cart.ComputeTotal().ToString("c"))</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a href="@Model.ReturnUrl" class="btn btn-primary">Continue Shopping</a>
</div>